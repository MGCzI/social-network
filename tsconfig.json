{
    "compilerOptions": {
        "outDir": "./src/",
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "noEmitOnError": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": ["./client/**/*", "./server/**/*"],
    "exclude": ["./tests/**"]
}
